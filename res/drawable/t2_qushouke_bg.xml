<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid 
                android:color="#ff0000"/>
            <!-- 描边 -->
            <stroke
                android:width="1dp"
                android:color="@color/white"/>
            <!-- 圆角 -->
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:right="10dp"/>
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <solid 
                android:color="#ff0000"/>            
            <stroke
                android:width="1dp"
                android:color="@color/white" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:right="10dp"/>
        </shape>
    </item>

    <item>       
        <shape>
            <solid android:color="#66ccff"/>
            <stroke
                android:width="1dp"
                android:color="@color/white" />
            <corners 
                android:radius="2dp"
            />
            <padding
                android:left="10dp"
                android:right="10dp" />
        </shape>
    </item>
</selector>