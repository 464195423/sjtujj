<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

	<LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
		android:background="@drawable/frame"
        android:padding="1dp"
        android:layout_marginTop="10dp">
	    <!-- title -->
		<RelativeLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:background="@drawable/t2_title">
		    <TextView 
		        android:id="@+id/t3_1t2_title1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:padding="5dp"
		        android:textColor="@color/t2_content"
		        android:text="试听授课"/>
		    <TextView 
		        android:id="@+id/t3_1t2_title2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:padding="5dp" 
		        android:text="D100"
		        android:textColor="@color/t2_content"
		        android:gravity="center"
		        android:layout_alignParentRight="true"/>
		</RelativeLayout>    
	
		<View 
			android:layout_width="fill_parent"
			android:layout_height="1dp"
			android:background="@drawable/divider1"/>
		
		<!-- content -->
	    <RelativeLayout 
	        android:layout_width="match_parent"
	   		android:layout_height="wrap_content"
	   		android:background="@drawable/t2_content"
	   		android:paddingTop="20dp"
	   		android:paddingLeft="@dimen/t2_content_padding"
	   		android:paddingBottom="20dp">
	   		
		    <LinearLayout 
		        android:id="@+id/t3_1t2_ll"
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:orientation="horizontal"
		    	android:layout_gravity="left">
		    	<com.yousi.util.RoundImageView
			        android:layout_gravity="center"
		            android:id="@+id/t3_1t2_iv1"
		            android:layout_width="50dp"
		    		android:layout_height="50dp"/>
		        <TextView 
		            android:layout_gravity="center"
		            android:id="@+id/t3_1t2_tvl"
		            android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
		    		android:textColor="@color/t2_content"
		    		android:text="周家长"/>	        
		    </LinearLayout>
		    
		    
		    <LinearLayout 
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_centerVertical="true"
		    	android:orientation="vertical"
		    	android:padding="5dp"
		    	android:layout_marginRight="10dp"
		    	android:layout_alignParentRight="true">
		        <TextView 
		            android:id="@+id/t3_1t2_tv1"
		            android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
		    		android:textColor="@color/t2_content"
		    		android:layout_gravity="center"
		    		android:gravity="center"
		    		android:text="试听时长：2小时"/>
		    </LinearLayout>
		    
		</RelativeLayout>	

	    <!-- 按钮 -->
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:background="@color/white">
	        <TextView
	            android:id="@+id/t3_1t2_bt1"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:paddingTop="5dp"
	       		android:paddingBottom="5dp"
	            android:gravity="center"
	            android:text="取消试教"
	            android:textColor="#35a5df"
				android:background="#f5f5f5"/>
	        <TextView
	            android:id="@+id/t3_1t2_bt2"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:paddingTop="5dp"
	       		android:paddingBottom="5dp"
	            android:gravity="center"
	            android:text="确认授课"
	            android:textColor="@color/white"
				android:background="#35a5df"/>
	    </LinearLayout>
	    
	</LinearLayout>

</LinearLayout>
