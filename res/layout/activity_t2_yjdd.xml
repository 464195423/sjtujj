<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

	<!-- Title -->
	<RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content">
	    <TextView
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:textColor="@color/white"
	        android:background="@color/background1"
	        android:text="已接订单"
	        android:gravity="center"
	        android:paddingTop="@dimen/padding"
	        android:paddingBottom="@dimen/padding"
	        />
	    <LinearLayout
	        android:id="@+id/t2_yjdd_up"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_centerHorizontal="true"
	        android:paddingLeft="@dimen/up_left_padding"
	        android:paddingRight="@dimen/up_right_padding"
	        android:paddingTop="@dimen/padding"
		    android:paddingBottom="@dimen/padding"
		    android:gravity="center">
		    <ImageView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/up"/>
		</LinearLayout>
	</RelativeLayout>
    
	
	<!-- 家长电话 -->
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:layout_marginTop="20dp"
	    android:orientation="horizontal">
	    
	    <TextView 
	        android:id="@+id/t2_yjdd_tv1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="家长姓名"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	        android:background="@drawable/t2_yjdd_bg"/>
	    <TextView
	        android:id="@+id/t2_yjdd_tv2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="13000000000"
	        android:textStyle="bold"
	        android:autoLink="phone"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	        android:background="@drawable/t2_yjdd_bg"/>
	</LinearLayout>
	
	
    
	<!-- info -->
	<TextView 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="50dp"
	    android:layout_marginRight="50dp"
	    android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/t2_yjdd_info"/>

	<!-- 确认试教，放弃订单 -->
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="@dimen/padding"
        android:paddingBottom="@dimen/padding"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding">
	    <Button
	        android:id="@+id/t2_yjdd_bt1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/t2_jiedan_bg"
	        android:textColor="@color/white"
	        android:text="确认试教" 
	        android:paddingLeft="20dp"
	        android:paddingRight="20dp"
	        android:layout_marginRight="@dimen/padding">
	    </Button>
	    <Button
	        android:id="@+id/t2_yjdd_bt2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/t2_jujue_bg"
	        android:textColor="@color/white"
	        android:text="放弃订单" 
	        android:paddingLeft="20dp"
	        android:paddingRight="20dp"
	        android:layout_marginLeft="@dimen/padding">
	    </Button>
    </LinearLayout>	
	
	
	
	<!-- 订单信息fragment -->
	<LinearLayout
        android:id="@+id/t2_yjdd_container"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content" >
    </LinearLayout>	
</LinearLayout>
