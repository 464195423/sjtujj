<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

	<LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
		android:background="@drawable/frame"
        android:padding="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">
	    <!-- title -->
		<RelativeLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:background="@drawable/t2_title">
		    <TextView 
		        android:id="@+id/t2_t6_title1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:padding="5dp"
		        android:textColor="@color/t2_lv_title"
		        android:text="未被聘用"/>
		    <TextView 
		        android:id="@+id/t2_t6_title2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:padding="5dp" 
		        android:text="D100"
		        android:textColor="@color/black"
		        android:gravity="center"
		        android:layout_alignParentRight="true"/>
		</RelativeLayout>    
	
		<View 
			android:layout_width="fill_parent"
			android:layout_height="1dp"
			android:background="@drawable/divider"/>
		
		<!-- content -->
	    <RelativeLayout 
	        android:layout_width="match_parent"
	   		android:layout_height="wrap_content"
	   		android:background="@drawable/t2_content"
	   		android:paddingTop="@dimen/t2_content_padding"
	   		android:paddingLeft="@dimen/t2_content_padding"
	   		android:paddingBottom="@dimen/t2_content_padding">
	   		
		    <LinearLayout 
		        android:id="@+id/t2_t6_ll"
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:orientation="vertical"
		    	android:layout_gravity="left">
		        <TextView 
		            android:id="@+id/t2_t6_l1"
		            android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
		    		android:textColor="@color/black"
		    		android:text="学生姓名：周星星"/>
		        <TextView 
		            android:id="@+id/t2_t6_l2"
		            android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
		    		android:textColor="@color/black"
		    		android:text="学生年级：一年级"/>
		        <TextView 
		            android:id="@+id/t2_t6_l3"
		            android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
		    		android:textColor="@color/black"
		    		android:text="辅导科目：数、英"/>
		        <TextView 
		            android:id="@+id/t2_t6_l4"
		            android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
		    		android:textColor="@color/black"
		    		android:text="小时单价：80元/时"/>
    
		    </LinearLayout>
	    
		</RelativeLayout>	

	    
	</LinearLayout>

</LinearLayout>
