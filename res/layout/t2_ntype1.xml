<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

	<LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
		android:background="@drawable/frame"
        android:padding="1dp"
        android:layout_marginTop="10dp">
	    <!-- title -->
		<RelativeLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:background="@drawable/t2_title">
		    <ImageView 
		        android:id="@+id/t2_t1_tmp"
		        android:layout_width="10dp"
		        android:layout_height="10dp"
		        android:src="@drawable/red_spot"
		        android:layout_marginLeft="10dp"
		        android:layout_centerVertical="true"/>
		    <TextView 
		        android:id="@+id/t2_t1_title1"
		        android:layout_toRightOf="@id/t2_t1_tmp"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:padding="5dp"
		        android:textColor="@color/t2_lv_title"
		        android:text="已被指定,待接单"/>
		    <TextView 
		        android:id="@+id/t2_t1_title2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:padding="5dp" 
		        android:text="D100"
		        android:textColor="@color/t2_title_r"
		        android:gravity="center"
		        android:layout_alignParentRight="true"/>
		</RelativeLayout>    
	
		<View 
			android:layout_width="fill_parent"
			android:layout_height="1dp"
			android:background="@drawable/divider1"/>
		
		<!-- content -->
	    <RelativeLayout 
	        android:layout_width="match_parent"
	   		android:layout_height="wrap_content"
	   		android:background="@drawable/t2_content"
	   		android:padding="@dimen/t2_content_padding">
	   		
		    <LinearLayout 
		        android:id="@+id/t2_t1_ll"
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:orientation="vertical"
		    	android:layout_marginLeft="15dp"
		    	android:layout_gravity="left">
		        <TextView 
		            android:id="@+id/t2_t1_l1"
		            android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
		    		android:textColor="@color/t2_content"
		    		android:text="学生姓名：周星星"/>
		        <TextView 
		            android:id="@+id/t2_t1_l2"
		            android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
		    		android:textColor="@color/t2_content"
		    		android:text="学生年级：一年级"/>
		        <TextView 
		            android:id="@+id/t2_t1_l3"
		            android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
		    		android:textColor="@color/t2_content"
		    		android:text="辅导科目：数、英"/>
		        <TextView 
		            android:id="@+id/t2_t1_l4"
		            android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
		    		android:textColor="@color/t2_content"
		    		android:text="小时单价：80元/时"/>
		        
		        
		    </LinearLayout>
		    
		    
		    <LinearLayout 
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_centerVertical="true"
		    	android:orientation="vertical"
		    	android:layout_marginRight="10dp"
		    	android:layout_alignParentRight="true">
		        <TextView 
		            android:id="@+id/t2_t1_bt1"
		            android:layout_width="@dimen/t2_button_width"
		    		android:layout_height="wrap_content"
		    		android:background="@drawable/t2_nbutton"
		    		android:textColor="@color/white"
		    		android:layout_marginBottom="5dp"
		    		android:gravity="center"
		    		android:text="接单"/>
		        
		        <TextView 
		            android:id="@+id/t2_t1_bt2"
		            android:layout_width="@dimen/t2_button_width"
		    		android:layout_height="wrap_content"
		    		android:background="@drawable/t2_nbutton"
		    		android:textColor="@color/white"
		    		android:layout_marginTop="5dp"
		    		android:gravity="center"
		    		android:text="拒绝"/>
		    </LinearLayout>
		    

		</RelativeLayout>	
		
	</LinearLayout>

</LinearLayout>
