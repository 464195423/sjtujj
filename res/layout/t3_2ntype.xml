<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
		android:background="@drawable/frame"
        android:padding="1dp"
        android:layout_marginTop="10dp">
	    <!-- title -->
		<RelativeLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:background="@drawable/t2_title">
		    <TextView 
		        android:id="@+id/t3_2t2_title1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:padding="5dp"
		        android:textColor="@color/black"
		        android:text="常规授课"/>
		    <TextView 
		        android:id="@+id/t3_2t2_title2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:padding="5dp" 
		        android:text="D100"
		        android:textColor="@color/black"
		        android:gravity="center"
		        android:layout_alignParentRight="true"/>
		</RelativeLayout> 
		
		<!-- content -->
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal">
		    <!-- ll1 -->
		    <LinearLayout 
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:gravity="center"
		        android:orientation="vertical">
		        <ImageView 
		            android:layout_width="40dp"
		            android:layout_height="40dp"
		            android:src="@drawable/p2"/>
		        <TextView 
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:gravity="center"
		            android:text="周家长"/>
		    </LinearLayout>
		    <!-- ll2 -->
		    <LinearLayout 
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="2"
		        android:orientation="vertical">
		        <TextView 
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:text="开始时间"/>
		        <TextView 
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:text="2015-4-13 10:33:49"/>
		        <TextView 
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:text="结束时间"/>
		        <TextView 
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:text="2015-4-13 10:34:08"/>
		    </LinearLayout>
		    <View 
		        android:layout_width="1dp"
		        android:layout_height="fill_parent"
		        android:background="@drawable/grey_divider"/>
		    <!-- ll3 -->
		    <LinearLayout 
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:layout_gravity="center"
		        android:orientation="vertical">
		        <TextView 
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:gravity="center"
		            android:text="2小时"/>
		        <TextView 
		            android:layout_width="@dimen/t2_button_width"
		    		android:layout_height="wrap_content"
		    		android:textColor="@color/white"
		    		android:background="@drawable/t2_nbutton"
		    		android:layout_gravity="center"
		    		android:gravity="center"
		    		android:text="查看评价"/>
		    </LinearLayout>
		</LinearLayout>
		
		
    </LinearLayout>

</LinearLayout>
