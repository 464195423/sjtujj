<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

	<!-- Title -->
	<RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content">
	    <TextView
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:textColor="@color/white"
	        android:background="@color/background1"
	        android:text="开始试听"
	        android:gravity="center"
	        android:paddingTop="@dimen/padding"
	        android:paddingBottom="@dimen/padding"
	        />
	    <LinearLayout
	        android:id="@+id/t2_ksst_up"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_centerHorizontal="true"
	        android:paddingLeft="@dimen/up_left_padding"
	        android:paddingRight="@dimen/up_right_padding"
	        android:paddingTop="@dimen/padding"
		    android:paddingBottom="@dimen/padding"
		    android:gravity="center">
		    <ImageView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/up"/>
		</LinearLayout>
	</RelativeLayout>
    
    
    <!-- content -->
	<ImageView
	    android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/appcancoursepic1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
	    
	</ImageView>
    <TextView
        android:id="@+id/t2_ksst_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:gravity="center"
        android:text="约定授课时间"/>

    
	<!-- 去授课 -->
	<Button 
	    android:id="@+id/t2_ksst_qushouke"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="50dp"
	    android:layout_marginRight="50dp"
	    android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
	    android:text="去授课"
	    android:textColor="@color/white"
	    android:gravity="center"
	    android:padding="10dp"
	    android:background="@drawable/t2_qushouke_bg"/>
	
	<!-- 修改时间与订单详情 -->
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="50dp"
	    android:layout_marginRight="50dp"
	    android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
	    android:orientation="horizontal">
       	    
		<TextView 
		    android:id="@+id/t2_ksst_tv1"
		    android:layout_width="0dp"
		    android:layout_weight="1"
		    android:layout_height="wrap_content"
		    android:text="修改时间"
		    android:textColor="@color/white"
		    android:gravity="center"
		    android:background="@drawable/t2_kssk_bg"
		    android:layout_marginRight="10dp"
		    /> 
		<TextView 
		    android:id="@+id/t2_ksst_tv2"
		    android:layout_width="0dp"
		    android:layout_weight="1"
		    android:layout_height="wrap_content"
		    android:text="订单详情"
		    android:textColor="@color/white"
		    android:gravity="center"
		    android:background="@drawable/t2_kssk_bg"
		    android:layout_marginLeft="10dp"
		    />		
	</LinearLayout>
	
	<TextView 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="50dp"
	    android:layout_marginRight="50dp"
	    android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/t2_ksst_info"/>
	
</LinearLayout>
